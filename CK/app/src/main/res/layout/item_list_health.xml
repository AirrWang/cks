<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="身体各部位练习" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivSm"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@color/c_ffffff"
            fresco:placeholderImageScaleType="focusCrop" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="112dp">


            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView23" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView24"
                android:layout_toRightOf="@+id/textView23"
                android:layout_toEndOf="@+id/textView23"
                android:id="@+id/textView25" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView23"
                android:layout_toStartOf="@+id/textView23"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView26"
                android:layout_toRightOf="@+id/textView23"
                android:layout_toEndOf="@+id/textView23"
                android:id="@+id/textView27" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_below="@+id/textView23"
                android:layout_toLeftOf="@+id/textView23"
                android:layout_toStartOf="@+id/textView23"
                android:layout_marginTop="11dp" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>