<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop_is_order"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/c_f2"
    android:layout_height="match_parent"
    tools:context="com.ckjs.ck.Android.HomeModule.Activity.ShopIsOrderActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/shop_updadress"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请填写收获地址"
                    android:textSize="14sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mine_activity_pic"
                    android:layout_width="10dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="15dp"
                    fresco:placeholderImage="@drawable/personal_focus_viewall" />


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/shop_adressdetail"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/c_33"/>
                    <TextView
                        android:id="@+id/shop_tel"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/c_33"/>
                    <TextView
                        android:id="@+id/shop_adress"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/c_33"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="10dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="15dp"
                    fresco:placeholderImage="@drawable/personal_focus_viewall" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/c_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="18dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/order_shop_pic"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="15dp"
                        fresco:placeholderImage="@color/c_f2" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/order_shop_name"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="14sp"
                            android:textColor="@color/c_33"/>
                        <TextView
                            android:id="@+id/order_shop_price"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="32dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="14sp"
                            android:textColor="@color/fea21249"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x1"
                        android:textColor="@color/fea21249"/>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/c_f2"/>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品售价:"
                        android:textSize="12sp"
                        android:textColor="@color/c_66"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_shop_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="12sp"
                        android:textColor="@color/c_66"/>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮费:"
                        android:textSize="12sp"
                        android:textColor="@color/c_66"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0.00"
                        android:textSize="12sp"
                        android:textColor="@color/c_66"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户支付:"
                        android:textSize="12sp"
                        android:textColor="@color/c_66"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/order_shop_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="12sp"
                        android:textColor="@color/fea21249"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/c_ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textSize="12sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/c_f2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            fresco:placeholderImage="@drawable/pay" />
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            fresco:placeholderImage="@drawable/wechat_pay" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/shop_zhifibao"
                                android:checked="true"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                            <RadioButton
                                android:id="@+id/shop_weixin"
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                        </RadioGroup>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textSize="14dp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/order_shop_price3"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="14dp"
            android:textColor="@color/fea21249"/>
        <Button
            android:id="@+id/submit_order"
            android:background="@drawable/bg_order_btn"
            android:text="提交订单"
            android:textColor="@color/c_ffffff"
            android:layout_width="150dp"
            android:layout_height="49dp" />

    </LinearLayout>
</RelativeLayout>
