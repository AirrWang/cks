<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/ll_rectangle_circl_bloodoxygen"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/c_ffffff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_xy_bloodoxgen_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="end"
                        android:text="一周详情"
                        android:textColor="@color/c_33"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_num_xy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="@color/c_ffffff"
                        android:textSize="36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="%"
                        android:textColor="@color/c_66"
                        android:textSize="14dp" />

                </LinearLayout>

                <RelativeLayout
                    android:background="#92ce96"
                    android:paddingRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dp"
                        android:text="100%"
                        android:textColor="@color/c_ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"
                        android:text="80%"
                        android:textColor="@color/c_ffffff"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/ll_one_line"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toEndOf="@+id/tv_data"
                        android:layout_toRightOf="@+id/tv_data">

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="#078483" />

                        <TextView
                            android:layout_width="4dp"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="#078483" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_one_line"
                        android:layout_width="1dp"
                        android:layout_height="72dp"
                        android:layout_toEndOf="@+id/ll_one_line"
                        android:layout_toRightOf="@+id/ll_one_line"
                        android:background="#078483" />

                    <com.ckjs.ck.Tool.ViewTool.Waterview.WaveView
                        android:id="@+id/ll_health_bloodoxygen_line"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@+id/tv_one_line"
                        android:layout_toRightOf="@+id/tv_one_line" />
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="72dp"
                       android:layout_alignParentRight="true"
                        android:background="#078483" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_measure_bloodoxygen"
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_rectangle_bloodoxygen"
                    android:text="点击测量"
                    android:textColor="@color/c_ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/c_ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/c_ffffff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/c_ffffff"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="血氧"
                                android:textColor="@color/c_33"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical"
                                android:text="脉率"
                                android:textColor="@color/c_33"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_line"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                fresco:actualImageScaleType="fitXY"
                                fresco:placeholderImage="@drawable/saturability"
                                fresco:placeholderImageScaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="9dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_line_bhd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="7dp"
                                    android:layout_height="6dp"
                                    android:layout_gravity="center|bottom"
                                    fresco:actualImageScaleType="fitXY"
                                    fresco:placeholderImage="@drawable/heart_rate_arrow"
                                    fresco:placeholderImageScaleType="fitXY" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/c_99" />

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                fresco:actualImageScaleType="fitXY"
                                fresco:placeholderImage="@drawable/pulse"
                                fresco:placeholderImageScaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="9dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_line_ml"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:layout_width="7dp"
                                    android:layout_height="6dp"
                                    android:layout_gravity="center|bottom"
                                    fresco:actualImageScaleType="fitXY"
                                    fresco:placeholderImage="@drawable/heart_rate_arrow"
                                    fresco:placeholderImageScaleType="fitXY" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/c_99" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/c_ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#92ce96" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:text="正常"
                            android:textColor="@color/c_66"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#fabc73" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:text="危险"
                            android:textColor="@color/c_66"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#fca29d" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:text="非常危险"
                            android:textColor="@color/c_66"

                            android:textSize="10sp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/c_ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:text="血氧饱和度诊断"
                    android:textColor="@color/c_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_j_l"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="        您还未开始测量哦，快开始测量看看您的血氧情况吧！"
                    android:textColor="@color/c_66"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/c_ffffff"
                        android:text="        您的血氧值为:"
                        android:textColor="@color/c_33"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/tv_xy_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@color/c_ffffff"
                        android:text="待测"
                        android:textColor="@color/c_58A360"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_health_bloodoxygen_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="突发状况"
                    android:textColor="@color/ff1e00"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="！"
                    android:textColor="@color/ff1e00"
                    android:textSize="15sp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    fresco:placeholderImage="@drawable/personal_viewall"
                    fresco:placeholderImageScaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大值"
                    android:textColor="@color/c_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0bmp"
                    android:textColor="@color/fea21249" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小值"
                    android:textColor="@color/c_33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0bmp"
                    android:textColor="@color/fea21249" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>