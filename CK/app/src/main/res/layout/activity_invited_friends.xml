<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="邀请好友下载一起玩吧！"
        android:textColor="@color/c_66"
        android:textSize="18sp"
        android:layout_marginBottom="42dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_invite_circle"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="37dp"
                android:layout_height="37dp"
                fresco:placeholderImage="@drawable/circle_friend"
                fresco:placeholderImageScaleType="focusCrop" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="@color/c_33"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_invite_weibo"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="37dp"
                android:layout_height="37dp"
                fresco:placeholderImage="@drawable/weibo_share"
                fresco:placeholderImageScaleType="focusCrop" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textColor="@color/c_33"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_invite_weixin"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="37dp"
                android:layout_height="37dp"
                fresco:placeholderImage="@drawable/weixin_share"
                fresco:placeholderImageScaleType="focusCrop" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textColor="@color/c_33"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_invite_qq"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="37dp"
                android:layout_height="37dp"
                fresco:placeholderImage="@drawable/qq_share"
                fresco:placeholderImageScaleType="focusCrop" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textColor="@color/c_33"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>