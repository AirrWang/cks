<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="18dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="18dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@color/c_f2" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="sdfsfdsfsdf"
        android:textColor="@color/c_33"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="150dp"
        android:gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/choose_clock"
            android:layout_toLeftOf="@+id/sw_xduan_ze"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sd_jian_tou"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/personal_viewall" />

        <Switch
            android:id="@+id/sw_xduan_ze"
            android:layout_width="48dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="false" />
    </RelativeLayout>
</LinearLayout>
