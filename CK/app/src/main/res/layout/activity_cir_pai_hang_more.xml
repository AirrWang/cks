<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_f2"
    android:orientation="vertical"
    tools:context="com.ckjs.ck.Android.CkCircleModule.Activity.CirPaiHangMoreActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/train_bg"
                android:layout_width="match_parent"
                android:layout_height="228dp">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_health_paihang_name"
                        android:layout_width="wrap_content"
                        android:textColor="@color/c_ffffff"
                        android:layout_height="wrap_content" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sd_paihang_firpic"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    fresco:actualImageScaleType="focusCrop"

                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="第1名"
                        android:textSize="12sp"
                        android:textColor="@color/c_ffffff"/>
                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_paihang_firstep"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_ffffff"/>
                        <TextView
                            android:id="@+id/tv_paihang_fircal"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_ffffff"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_paihang_pingjuncal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/c_ffffff"/>

                </LinearLayout>

            </RelativeLayout>
            <LinearLayout

                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/c_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_paihang_myrank"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sd_paihang_mypic"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:placeholderImage="@color/c_e6"
                    />
                <TextView
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:maxLines="1"
                    android:id="@+id/tv_paihang_myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:id="@+id/tv_paihang_mystep"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_4491F2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消耗"
                        android:textSize="12sp"
                        android:textColor="@color/c_33"/>
                    <TextView
                        android:id="@+id/tv_paihang_mycal"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ff1e00"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/c_33"/>
                </LinearLayout>
            </LinearLayout>
            <com.ckjs.ck.Tool.ViewTool.MyListView
                android:id="@+id/lv_paihang_detail"
                android:layout_marginTop="10dp"
                android:dividerHeight="0dp"
                android:divider="@color/c_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.ckjs.ck.Tool.ViewTool.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
