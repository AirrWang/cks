<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/c_ffffff">
    <include layout="@layout/toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c07ac83"
        android:layout_marginTop="15dp"
        android:text="请输入亲友手机号或超空ID添加"/>
    <EditText
        android:id="@+id/et_search_friends"
        android:layout_marginTop="15dp"
        android:layout_width="255dp"
        android:layout_height="34dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:maxEms="11"
        android:hint="亲友手机号或超空ID"
        android:textColor="@color/c_33"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:background="@drawable/text_retangle_biankuang_lv"/>
    <TextView
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_99"
        android:layout_marginTop="20dp"
        android:text="示例:"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="10dp"
        android:layout_width="202dp"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_height="280dp"
        fresco:placeholderImage="@drawable/calendar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/c_99"
        android:layout_marginTop="20dp"
        android:text="如图: 前去超空首页签到界面查看超空会员ID"/>
</LinearLayout>