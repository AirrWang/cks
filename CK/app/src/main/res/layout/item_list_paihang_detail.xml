<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="6dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_paihang_list_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/c_33" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sd_paihang_list_rank"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            fresco:actualImageScaleType="focusCrop" />
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_paihang_list_pic"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@color/c_e6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:paddingRight="4dp"
            android:id="@+id/tv_paihang_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="@color/c_33" />

        <TextView
            android:paddingRight="4dp"
            android:id="@+id/tv_paihang_list_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/c_4491F2"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗"
                android:textColor="@color/c_33"
                android:textSize="12sp" />

            <TextView
                android:singleLine="true"
                android:id="@+id/tv_paihang_list_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ff1e00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:text="kcal"
                android:textColor="@color/c_33" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
