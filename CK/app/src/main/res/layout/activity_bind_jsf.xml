<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:gravity="center">
    <LinearLayout
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:textColor="@color/c_33"/>
        <EditText
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:hint="请输入卡号"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:maxLength="36"
            android:id="@+id/et_bind_cardnum"
            android:layout_marginTop="1dp"
            android:background="@drawable/et_rectangle"
            android:layout_marginLeft="15dp"
            android:inputType="textEmailAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_bind_realname"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:text="李三"
            android:textColor="@color/c_99"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_bind_tel"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:text="1111111"
            android:textColor="@color/c_99"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_sure_bind"
        android:background="@drawable/button_rectangle_circl_5"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_marginBottom="23dp"
        android:textColor="@color/c_ffffff"
        android:layout_height="30dp"
        android:text="确认绑定"/>

</LinearLayout>