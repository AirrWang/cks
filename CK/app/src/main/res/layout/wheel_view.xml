    <Button
        android:id="@+id/sure"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textColor="@color/c_ffffff"
        android:background="@color/c_4491F2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>