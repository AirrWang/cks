    android:layout_height="fill_parent"
    android:paddingBottom="6dp"
    android:orientation="vertical">

    <com.ckjs.ck.Tool.ViewTool.WheelView
        android:id="@+id/wheel_view_wv"
        android:layout_width="match_parent"
