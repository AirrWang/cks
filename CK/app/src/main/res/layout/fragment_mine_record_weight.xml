<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/historyscore_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff">
        <LinearLayout
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_marginBottom="@dimen/historyscore_tb"
            android:layout_marginTop="@dimen/historyscore_tb"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周记录"
                android:textSize="14sp"
                android:textColor="@color/c_33"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位：千克"
                android:textColor="@color/c_33"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_f2"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_mine_weekrecordweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_weekrecordweighttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/historyscore_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff">
        <LinearLayout
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_marginBottom="@dimen/historyscore_tb"
            android:layout_marginTop="@dimen/historyscore_tb"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月记录"
                android:textSize="14sp"
                android:textColor="@color/c_33"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位：千克"
                android:textColor="@color/c_33"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_f2"/>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_mine_monthrecordweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_monthrecordweighttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/historyscore_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff">
        <LinearLayout
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_marginBottom="@dimen/historyscore_tb"
            android:layout_marginTop="@dimen/historyscore_tb"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年记录"
                android:textSize="14sp"
                android:textColor="@color/c_33"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位：千克"
                android:textColor="@color/c_33"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/historyscore_tb"
            android:layout_marginRight="@dimen/historyscore_tb"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_f2"/>
        <HorizontalScrollView
            android:id="@+id/h_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_mine_yearrecordweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_mine_yearrecordweighttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>





</LinearLayout>
