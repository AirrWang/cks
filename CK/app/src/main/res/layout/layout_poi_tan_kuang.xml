<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="210dp"
        android:layout_height="56dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="1"
        fresco:placeholderImage="@drawable/home_item_button_bai_5"
        fresco:placeholderImageScaleType="focusCrop"
       />

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/buttonLuXian"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            fresco:actualImageScaleType="fitCenter"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@drawable/map_car"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1" />

        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="4dp"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/my_member_icon"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:viewAspectRatio="1" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/c_33"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/textViewCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/c_66"
                android:textSize="10sp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/textViewAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/c_66"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>
