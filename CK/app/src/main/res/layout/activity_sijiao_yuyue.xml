<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sijiao_yuyue_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@color/c_f2"
                fresco:viewAspectRatio="2.0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/c_ffffff"
                android:padding="10dp"
                android:text="简介"
                android:textColor="@color/c_33"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="官方简介"
                android:background="@color/c_ffffff"
                android:textStyle="bold"
                android:textColor="@color/c_4491F2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sijiao_yuyue_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:textColor="@color/c_66"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/c_ffffff"
                android:text="个人简介"
                android:textStyle="bold"
                android:textColor="@color/c_4491F2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sijiao_yuyue_manualP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:paddingRight="4dp"
                android:paddingBottom="6dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:textColor="@color/c_66"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#00000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="身高"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/fea21249" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="体重"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/fea21249" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/fea21249" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星级评价"
                    android:textColor="@color/c_33"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_sijiao_yuyue_star"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginLeft="22dp"
                    android:orientation="horizontal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频指导"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="上门指导"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="选择数量"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="33dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单价"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="单价"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:textColor="@color/c_33"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sijiao_yuyue_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/fea21249"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_sijiao_yuyue_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="￥"
                        android:textColor="@color/fea21249"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:textColor="@color/fea21249"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sijiao_yuyue_shipin"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/sijiao_yuyue_shangmen"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="24dp" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btn_num_down_sijiao"
                            android:layout_width="30dp"
                            android:layout_height="27dp"
                            android:background="@drawable/text_rectangle_circl_left_grey"
                            android:clickable="false"
                            android:text="—"
                            android:textColor="@color/c_33" />

                        <TextView
                            android:id="@+id/text_num_sijiao"
                            android:layout_width="30dp"
                            android:layout_height="27dp"
                            android:background="@drawable/text_rectangle_grey"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/c_33" />

                        <Button
                            android:id="@+id/btn_num_up_sijiao"
                            android:layout_width="30dp"
                            android:layout_height="27dp"
                            android:background="@drawable/text_rectangle_circl_right_grey"
                            android:clickable="false"
                            android:text="+"
                            android:textColor="@color/c_33" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/c_ffffff"
                android:padding="10dp"
                android:text="选择预约时间"
                android:textColor="@color/c_33" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择日期"
                    android:textColor="@color/fea21249" />

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:hint="请选择时间"
                    android:textColor="@color/fea21249" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="12dp"
                android:text="预约时间为第一节课，后续上课自行预约！"
                android:textColor="@color/c_99"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择地址"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_sijiao_yuyue_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/text4"
                    android:hint="请选择城市"
                    android:textColor="@color/c_33" />

                <EditText
                    android:id="@+id/et_sijiao_yuyue_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/text4"
                    android:background="@color/c_ffffff"
                    android:hint="请输入详细地址"
                    android:textColor="@color/c_33"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="提示：教练确认接单后，到我的订单确认付款"
                android:textColor="@color/c_99"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@color/c_f2" />
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/c_ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="@color/c_33"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_sijiao_yuyue_toatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="￥"
            android:textColor="@color/fea21249"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_sijiao_yuyue_submit"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:background="@drawable/bg_order_btn"
            android:text="提交订单"
            android:textColor="@color/c_ffffff" />

    </LinearLayout>
</RelativeLayout>