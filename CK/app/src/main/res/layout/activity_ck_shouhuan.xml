<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/c_f2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:background="?attr/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.ckjs.ck.Tool.ViewTool.Waterview.WaveView
                    android:id="@+id/wave"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_below="@+id/colorChoice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="剩余电量"
                    android:textColor="@color/c_ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="震动提醒开关"
                    android:textColor="@color/c_33" />

                <Switch
                    android:id="@+id/sw_master_shake"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"

                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="数据一键同步"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_start_tong_bu"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_rectangle_circl_fea249"
                    android:gravity="center"
                    android:text="同步"
                    android:textColor="@color/c_4491F2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="超空智能编程"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_set"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_rectangle_circl_fea249"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/c_4491F2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="固件版本号"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_firmware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_33" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="手环MAC地址"
                    android:textColor="@color/c_33" />

                <TextView
                    android:id="@+id/tv_mak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/c_33" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/c_ffffff"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="押金支付成功"
                    android:textColor="@color/color_de4b37" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_de4b37" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/c_ffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/c_f2" />

                <Button
                    android:id="@+id/btn_jie_bang"
                    android:layout_width="167dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rectangle_circl_5"
                    android:text="解除绑定"
                    android:textColor="@color/c_ffffff" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>