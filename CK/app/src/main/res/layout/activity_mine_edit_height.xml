<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">

    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <EditText
            android:gravity="center"
            android:inputType="numberDecimal"
            android:background="#00000000"
            android:id="@+id/mine_edit_height"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLength="5"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/historyscore_tb"
        android:layout_marginLeft="@dimen/historyscore_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入您的最新体重"
        android:textSize="14sp"
        android:textColor="@color/c_33"/>


</LinearLayout>