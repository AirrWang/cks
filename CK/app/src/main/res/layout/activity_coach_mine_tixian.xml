<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2"
    android:gravity="center_horizontal">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/c07ac83"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账账户"
            android:textSize="14sp"
            android:textColor="@color/c_ffffff"/>
        <TextView
            android:id="@+id/tv_coach_tixian_bank"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/c_ffffff"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_coach_tixian"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text=" ?"
            android:textColor="@color/c_ffffff"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_coach_tixian_yue"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
    </LinearLayout>
    <TextView
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提现金额"
        android:textColor="@color/c_33"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="36sp"
            android:textColor="@color/c_33"/>
        <EditText
            android:id="@+id/et_coach_tixian_jine"
            android:paddingTop="10dp"
            android:maxLength="7"
            android:layout_marginLeft="10dp"
            android:hint="请输入提现金额"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="手续费"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_coach_tixian_shouxufei"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/fea21249"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="到账金额"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_coach_tixian_daozhang"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="14sp"
            android:textColor="@color/fea21249"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现即代表您已阅读并同意"
            android:textSize="12sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_tx_xy"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《私教提现协议》"
            android:textSize="12sp"
            android:textColor="#3366cc"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_tx"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="提现"
        android:textSize="18sp"
        android:textColor="@color/c_ffffff"
        android:background="@color/fea21249"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="3-5个工作日内到账"
        android:textColor="@color/c_66"/>

</LinearLayout>