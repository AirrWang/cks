<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_list_mine_private_letter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mine_private_pic"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="1"
        fresco:placeholderImage="@drawable/default_head"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:pressedStateOverlayImage="@drawable/text_rdio_bg"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/mine_private_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_33"
            android:textSize="14sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mine_private_sex"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/mine_private_name"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="1"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/mine_private_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@+id/mine_private_name"
            android:singleLine="true"
            android:layout_toStartOf="@+id/r_red"
            android:layout_toLeftOf="@+id/r_red"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/mine_private_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"


            android:textColor="@color/c_99"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/r_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_private_name"
            android:layout_marginTop="6dp">

            <FrameLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sd_red"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    fresco:actualImageScaleType="fitCenter"
                    fresco:fadeDuration="3"
                    fresco:placeholderImage="@color/c_ffffff"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:viewAspectRatio="1" />

                <TextView
                    android:id="@+id/mine_private_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:text="1"
                    android:textColor="@color/c_ffffff"
                    android:textSize="12sp" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>