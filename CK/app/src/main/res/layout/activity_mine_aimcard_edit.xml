<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:background="@color/c_ffffff"
                android:padding="10dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/tv_5"
                    android:layout_width="71dp"
                    android:layout_height="71dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    fresco:roundedCornerRadius="4dp"
                    fresco:placeholderImage="@drawable/card_photo"
                    fresco:placeholderImageScaleType="focusCrop"
                    />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sd_6"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/tv_5"
                    fresco:placeholderImage="@drawable/card_name"
                    fresco:placeholderImageScaleType="focusCrop" />

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/sd_6"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor="@color/c_33" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="22dp"
                    android:layout_below="@+id/sd_6"
                    android:id="@+id/tv_7"
                    android:layout_width="130dp"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@+id/tv_5"
                    android:background="@color/c_99" />
            </RelativeLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_condition"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医疗状况"
                        android:textColor="@color/c_33"/>
                    <EditText
                        android:id="@+id/et_aim_mcondition"
                        android:background="#00000000"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="未说明"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_note"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="医疗笔记"
                        android:textColor="@color/c_33"/>
                    <EditText
                        android:id="@+id/et_aim_note"
                        android:textSize="14sp"
                        android:background="#00000000"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="未说明"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_irritablity"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="过敏反应"
                        android:textColor="@color/c_33"/>
                    <EditText
                        android:id="@+id/et_aim_allergy"
                        android:background="#00000000"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="未说明"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_medicine"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="药物使用"
                        android:textColor="@color/c_33"/>
                    <EditText
                        android:id="@+id/et_aim_medecin"
                        android:background="#00000000"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="未说明"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_add"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:id="@+id/ll_mine_aim_blood_type"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_bloodtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加血型"
                        android:textColor="@color/c_33"/>
                    <TextView
                        android:layout_marginTop="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_weight"
                    fresco:placeholderImageScaleType="focusCrop" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView69"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体重"
                            android:textColor="@color/c_33" />

                        <TextView
                            android:id="@+id/tv_card_edite_weight"
                            android:layout_marginLeft="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_4491F2"/>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/c_99"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_stature"
                    fresco:placeholderImageScaleType="focusCrop" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高"
                        android:textColor="@color/c_33"/>
                <TextView
                    android:id="@+id/tv_card_edite_height"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_4491F2"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="紧急联系人"/>
            <LinearLayout
                android:id="@+id/ll_mine_add_contact"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/c_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    fresco:placeholderImage="@drawable/card_add"
                    fresco:placeholderImageScaleType="focusCrop" />
                <TextView
                    android:id="@+id/tv_aim_contact"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加紧急联系人"
                    android:textColor="@color/fea21249"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>