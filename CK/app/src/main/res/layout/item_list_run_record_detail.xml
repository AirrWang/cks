<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@color/c_ffffff">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_gravity="center_vertical"
        android:id="@+id/sd_run_record_detail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="1"
        fresco:placeholderImage="@drawable/track"
        fresco:placeholderImageScaleType="focusCrop"
        fresco:pressedStateOverlayImage="@drawable/track"
         />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_run_record_data_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_99"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_run_record_data_week"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_99"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_run_record_data_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_33"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_run_record_data_distance"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_33"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_run_record_data_consume"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c07ac83"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="16dp"
        android:layout_height="20dp"
        fresco:placeholderImage="@drawable/personal_viewall"
        />

</LinearLayout>