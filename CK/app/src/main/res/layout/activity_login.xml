<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_home_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/bg"
        android:layout_below="@+id/toolbar"
        fresco:placeholderImageScaleType="focusCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超空™运动健康智能管理系统"
                android:textColor="@color/c_ffffff"
                android:textSize="16sp"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="30dp"
                android:id="@+id/simpleDraweeView"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_marginLeft="144dp"
                android:layout_marginRight="144dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="1"
                fresco:placeholderImage="@drawable/logo"
                fresco:placeholderImageScaleType="focusCrop" />

            <TextView
                android:layout_marginTop="15dp"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超空"
                android:textColor="@color/c_ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/text_rectangle_circl"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="8dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/account"
                    fresco:placeholderImageScaleType="focusCrop" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@color/c_00"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textColor="@color/c_ffffff"
                    android:textColorHint="@color/c_ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/bt_username_clear"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/delete"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_rectangle_circl"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="8dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/password"
                    fresco:placeholderImageScaleType="focusCrop" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@color/c_00"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890*^%$#@!~?./-+\][,\=_{}|`:;'"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textColor="@color/c_ffffff"
                    android:textColorHint="@color/c_ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/bt_pwd_eye"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/eyes"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/bt_pwd_clear"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/delete"
                    android:visibility="invisible" />
            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_rectangle_circl"
                android:gravity="center"
                android:text="登录"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sigup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="新用户注册"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/login_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="忘记密码"
                    android:textColor="@color/c_ffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_layout"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/login_qq"
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/qq_pressed"
                    fresco:placeholderImageScaleType="focusCrop"
                    fresco:pressedStateOverlayImage="@drawable/publish_qq_pressed" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/login_wx"
                    android:layout_width="34dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="41dp"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/wechat_pressed"
                    fresco:placeholderImageScaleType="focusCrop"
                    fresco:pressedStateOverlayImage="@drawable/publish_wechat_pressed" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/login_sina"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="41dp"

                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="1"
                    fresco:placeholderImage="@drawable/micrblog_pressed"
                    fresco:placeholderImageScaleType="focusCrop"

                    fresco:pressedStateOverlayImage="@drawable/publish_micrblog_pressed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/c_f2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第三方登陆"
                    android:textColor="@color/c_f2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/c_f2" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>