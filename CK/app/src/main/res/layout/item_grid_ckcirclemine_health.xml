<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/r_iv_grid_circle_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_grid_circle_mine"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:paddingTop="4dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="1dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="1"
                fresco:placeholderImage="@color/c_e6"
                fresco:pressedStateOverlayImage="@color/c_50f0eff5" />

            <TextView
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:text="sdfdsfdsfs"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_grid_circle_mine"
                android:textColor="@color/c_33" />
        </RelativeLayout>

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/r_iv_grid_circle_mine"
            android:background="@color/c_ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:background="@color/c_ffffff">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_grid_circle_mine_two"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="1dp"
                android:visibility="gone"
                android:paddingTop="4dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="1"
                fresco:placeholderImage="@color/c_e6"
                fresco:pressedStateOverlayImage="@color/c_50f0eff5" />

            <TextView
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_below="@+id/iv_grid_circle_mine_two"
                android:id="@+id/tv_text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/c_ffffff"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/r_iv_grid_circle_mine"
            android:background="@color/c_ffffff" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:visibility="gone" />

</LinearLayout>