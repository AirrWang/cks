<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r_jsf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/tv_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/sd_icon"
        android:layout_toRightOf="@+id/sd_icon"
        android:text="TextView"
        android:textColor="@color/c_33"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_7"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@+id/tv_8"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/sd_icon"
        android:layout_toRightOf="@+id/sd_icon"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/tv_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_7"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/sd_icon"
        android:layout_toRightOf="@+id/sd_icon"
        android:text="关注度："
        android:textColor="@color/c_33"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_gzs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_7"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_9"
        android:layout_toRightOf="@+id/tv_9"
        android:textColor="@color/fea21249"
        android:textSize="12sp" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_add"
        android:layout_below="@+id/tv_9"
        android:textColor="@color/c_33"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="24dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="3"
        fresco:placeholderImage="@drawable/home_arow"
        fresco:placeholderImageScaleType="focusCrop" />

</RelativeLayout>