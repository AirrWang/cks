<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_item_button_bai_10">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gyminfo_pic"
            android:layout_width="85dp"
            android:layout_height="90dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@color/c_f2"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gyminfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/c_33"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/gyminfo_tel"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_33"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/gyminfo_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_33"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_lift_bind"
        android:layout_marginBottom="15dp"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="解除绑定"
        android:background="@drawable/button_rectangle_circl_5"
        android:textColor="@color/c_ffffff"/>

</LinearLayout>