<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">
    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/tv_sure_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/c_ffffff"
        android:textColor="@color/c_33"/>
    <TextView
        android:layout_marginTop="1dp"
        android:background="@color/c_ffffff"
        android:padding="10dp"
        android:text="请确认以下信息："
        android:textColor="@color/c_33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/back_rectangle_circl_5"
            android:orientation="horizontal"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:gravity="center">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_gravity="center_vertical"
            android:id="@+id/mine_attention_pic"
            android:layout_width="45dp"
            android:layout_height="50dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@drawable/icon_new_member"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:pressedStateOverlayImage="@drawable/text_rdio_bg"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sure_cardnum"
                android:textColor="@color/c_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sure_name"
                android:textColor="@color/c_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sure_address"
                android:textColor="@color/c_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sure_tel"
                android:textColor="@color/c_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:gravity="center"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_sure_sure"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/button_rectangle_circl_5"
            android:text="点亮"
            android:textColor="@color/c_ffffff"/>
        <TextView
            android:id="@+id/tv_sure_no"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我拒绝"
            android:textColor="@color/c_99"/>
    </LinearLayout>
</LinearLayout>