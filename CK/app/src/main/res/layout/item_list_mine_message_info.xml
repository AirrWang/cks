<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_f2"
    android:paddingBottom="2dp"
    >

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="114dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginRight="4dp"
            android:id="@+id/mine_message_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@drawable/default_head"
            fresco:placeholderImageScaleType="focusCrop"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/duihuakuang_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/c_33"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sd_message_pic"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:fadeDuration="1"
                        fresco:placeholderImage="@color/c_f2"
                        fresco:placeholderImageScaleType="focusCrop"
                        fresco:pressedStateOverlayImage="@drawable/text_rdio_bg" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_duihua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/c_33"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_duihua_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/c_99"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>