<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f2">
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sleep_change"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全天睡眠"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_sleep_timelength"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/fea21249"/>
        <TextView
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="睡眠质量"
            android:textSize="14sp"
            android:textColor="@color/c_33"/>
        <TextView
            android:id="@+id/tv_sleep_quality"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/fea21249"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_mb"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_sleep_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="@color/c_99"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/c_99"/>
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="@color/c_f2"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ss_time"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深睡时长"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_ss_time"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shenshui_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_s_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="@color/c_99"/>
                <TextView
                    android:id="@+id/tv_shenshui_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:id="@+id/tv_s_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/c_99"/>
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/c_f2"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_qs_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浅睡时长"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_qs_time"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_qianshui_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_q_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="@color/c_99"/>
                <TextView
                    android:id="@+id/tv_qianshui_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:id="@+id/tv_q_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/c_99"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_f2"/>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_yestoday_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨晚入睡"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_yestoday_time"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ruhusi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"

                    android:textColor="@color/c_99"/>
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:background="@color/c_f2"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_day_xing_lai_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日醒来"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_day_xing_lai_time"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_wakeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_99"/>
            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent"
            android:background="@color/c_f2"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_qx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清醒时长"
                android:textColor="@color/c_33"/>
            <LinearLayout
                android:layout_below="@+id/tv_qx_time"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_awake_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_33"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_x_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textColor="@color/c_99"/>
                <TextView
                    android:id="@+id/tv_awake_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/c_33"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="@color/c_99"
                    android:id="@+id/tv_x_minute" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>