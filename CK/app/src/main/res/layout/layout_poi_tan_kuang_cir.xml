<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="160dp"
        android:layout_height="40dp"
        fresco:actualImageScaleType="fitCenter"
        fresco:fadeDuration="1"
        fresco:placeholderImage="@drawable/home_item_button_bai_5"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:viewAspectRatio="3.4328" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/buttonLuXian"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            fresco:actualImageScaleType="fitCenter"
            fresco:fadeDuration="1"
            fresco:placeholderImage="@drawable/map_car"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:viewAspectRatio="1" />

        <TextView
            android:id="@+id/textViewAdress"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:orientation="vertical"
            android:padding="2dp"
            android:textColor="@color/c_33"
            android:textSize="11sp"></TextView>
    </LinearLayout>

</FrameLayout>
