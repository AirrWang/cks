<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="129dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        fresco:placeholderImage="@drawable/sensor"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="手环不在身边？\n\n是否切换为手机传感器？"
        android:textColor="@color/c_33"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/buttonTrue"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="32.5dp"
            android:background="@color/c_4491F2"
            android:text="是"
            android:textColor="@color/c_ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonFalse"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="32.5dp"
            android:background="@color/c_99"
            android:text="否"
            android:textColor="@color/c_ffffff"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>