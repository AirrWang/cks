<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textColor="@color/c_f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView

            android:id="@+id/sd_health_list_pic"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="3"
            fresco:placeholderImage="@color/c_e6"
            fresco:pressedStateOverlayImage="@color/c_50f0eff5"
            fresco:viewAspectRatio="1.81" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:text="TextView">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_33"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_jie_shao"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_66"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_99"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>